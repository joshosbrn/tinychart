{
  "manifest_version": 2,

  "name": "NPR TinyChart",
  "description": "TinyChart is a tiny analytics dashboard built using the Chartbeat API. Created in May 2015 during NPR's Serendipity Days.",
  "version": "1.0",

  "options_page": "options.html",

  "permissions": [
    "https://api.chartbeat.com/",
    "http://api.chartbeat.com/",
    "https://api.chartbeat.com/",
    "http://api.chartbeat.com/*"
  ],

  "content_security_policy": "script-src 'self' https://api.chartbeat.com/; object-src 'self'",

  //"omnibox": { "keyword" : "" },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  }

}